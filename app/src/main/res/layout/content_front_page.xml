<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.meedy.irrigationapp.FrontPage"
    tools:showIn="@layout/activity_front_page"
    android:background="@color/colorBG">

    <TextView
        android:id="@+id/tv"
        android:text="Select a system"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:textColor="#0f0e0d"/>

    <Button
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:textSize="20sp"
        android:text="Design Sprinkler"
        android:id="@+id/btn1"
        android:layout_below="@+id/tv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp" />

    <Button
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:textSize="20sp"
        android:text="Design Drip"
        android:id="@+id/btn2"
        android:layout_below="@+id/btn1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp" />



    <Button
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:textSize="20sp"
        android:text="FAO Manuals"
        android:id="@+id/btn4"
        android:layout_below="@+id/btn2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="53dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/copyryt"
        android:textColor="#212121"
        android:id="@+id/copyright"
        android:layout_marginTop="47dp"
        android:layout_below="@+id/btn4"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
